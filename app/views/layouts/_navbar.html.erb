<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-light bg-light border">
    <a class="navbar-brand" href="/">WeightLog</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <% if logged_in? %>
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to 'ユーザー比較', users_path, class: "nav-link" %></li>
        <li class="nav-item dropdown mr-5">
          <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
            <%= User %>
          </button>
          <div class="dropdown-menu">
            <%= link_to 'プロフィール変更', "#{current_user.id}/edit", class: "nav-link" %>
            <div class="dropdown-divider"></div>
            <%= link_to 'Logout', logout_path, {method: :delete, data: {confirm: 'ログアウトしますか？'}, class: "nav-link"} %>
          </div>
        </li>
      </ul>
    </div>
    <% else %>
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item"><a href="signup" class="nav-link">Signup</a></li>
        <li class="nav-item"><a href="login" class="nav-link">Login</a></li>
      </ul>
    </div>
    <% end %>
  </nav>
</header>